<div class="schedule-container">
    <div id="schedule" class="schedule">
        <div id="time-bar"></div>
    </div>
</div>
<div class="location-panel-outer">
    <div id="location-panel" class="location-panel">
    </div>
</div>

    <div class="modal" id="show-modal" tabindex="-1">
      <div class="modal-dialog" >
        <div class="modal-content">
            <div class="modal-body">
                <div class="modal-left">
                  <h4 class="modal-title modal-show-title"></h4>
                  <h3 class="modal-show-times"></h3>
                  <p class="modal-show-description"></p>
                </div>
                <div class="modal-right">
                  <img class="modal-image" src=""/>
                </div>
            </div>
        </div><!-- /.modal-content -->
      </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->

<!--TEMPLATES!-->
<script id="venue-row-template" type="text/x-handlebars-template">
  <div id="venue_row_{{id}}"  class="venue-row" data-venue-id="{{id}}">
  </div>
</script>

<script id="location-template" type="text/x-handlebars-template"><div class="location" data-venue-id="{{id}}">{{short_name}}</div></script>

<script id="hour-template" type="text/x-handlebars-template"><div class="hour-marker" style="left:{{offset}}px; width:{{width}}px">{{hour}}</div></script>

<script id="show-template" type="text/x-handlebars-template">
  <div class="show" data-show-id="{{show.id}}" data-start-time="{{starttime}}" data-end-time="{{endtime}}" style="left:{{offset}}px; width:{{width}}px">
    <div class="show-title">{{show.show_name}}</div>
    <div class="show-time">{{start}}-{{end}}</div>
  </div>
</script>

